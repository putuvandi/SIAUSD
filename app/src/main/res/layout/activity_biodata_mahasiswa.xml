<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BiodataMahasiswa">

    <TextView
        android:id="@+id/fiturHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTowny"
        android:padding="8dp"
        android:text="Biodata"
        android:textAppearance=
            "@android:style/TextAppearance.DeviceDefault.Large"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_below="@+id/fiturHeading">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioNim"
                android:text="Nomor Mahasiswa" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="9"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/txtBioNim" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioNamaMhs"
                android:paddingTop="16dp"
                android:text="Nama Mahasiswa" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/txtBioNamaMhs"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioTempatLahir"
                android:paddingTop="16dp"
                android:text="Tempat Lahir"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBioKabupatenLahir"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBioTempatLahir"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioTglLahir"
                android:paddingTop="16dp"
                android:text="Tanggal Lahir" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBioTglLahir"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioJenisKelamin"
                android:paddingTop="16dp"
                android:text="Jenis Kelamin"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:id="@+id/txtBioJenisKelamin"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioAlamatSkr"
                android:paddingTop="16dp"
                android:text="Alamat Sekarang"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="8"
                android:scrollbars="vertical"
                android:maxLength="255"
                android:id="@+id/txtBioAlamatSkr"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioKabupatenSkrg"
                android:paddingTop="16dp"
                android:text="Kabupaten Sekarang"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBioKabupatenSkr"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioKodePosSkr"
                android:paddingTop="16dp"
                android:text="Kode Pos Sekarang"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBioKodePosSkr"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioAlamatAsal"
                android:paddingTop="16dp"
                android:text="Alamat Asal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="4"
                android:gravity="top|left"
                android:maxLines="8"
                android:scrollbars="vertical"
                android:maxLength="255"
                android:id="@+id/txtBioAlamatAsal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioKabupatenAsal"
                android:paddingTop="16dp"
                android:text="Kabupaten Asal"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBioKabupatenAsal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioKodePosAsal"
                android:paddingTop="16dp"
                android:text="Kode Pos Asal"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBioKodePosAsal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioNamaAyah"
                android:paddingTop="16dp"
                android:text="Nama Ayah"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="2"
                android:gravity="top|left"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:maxLength="50"
                android:id="@+id/txtBioNamaAyah"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioEmail"
                android:paddingTop="16dp"
                android:text="Email"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="1"
                android:gravity="top|left"
                android:maxLines="8"
                android:scrollbars="vertical"
                android:maxLength="255"
                android:id="@+id/txtBioEmail"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioNoHp"
                android:paddingTop="16dp"
                android:text="No. HP"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="2"
                android:minLines="1"
                android:gravity="top|left"
                android:maxLines="2"
                android:scrollbars="vertical"
                android:maxLength="35"
                android:id="@+id/txtBioNoHp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioNISN"
                android:paddingTop="16dp"
                android:text="NISN"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="10"
                android:id="@+id/txtBioNISN"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioNIK"
                android:paddingTop="16dp"
                android:text="NIK"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="16"
                android:id="@+id/txtBioNIK"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioTglLahirAyah"
                android:paddingTop="16dp"
                android:text="Tanggal Lahir Ayah" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBioTglLahirAyah"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioNamaIbu"
                android:paddingTop="16dp"
                android:text="Nama Ibu Kandung"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:minLines="2"
                android:gravity="top|left"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:maxLength="50"
                android:id="@+id/txtBioNamaIbu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioTglLahirIbu"
                android:paddingTop="16dp"
                android:text="Tanggal Lahir Ibu" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtBioTglLahirIbu"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioNIKAyah"
                android:paddingTop="16dp"
                android:text="NIK Ayah"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="16"
                android:id="@+id/txtBioNIKAyah"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvBioNIKIbu"
                android:paddingTop="16dp"
                android:text="NIK Ibu"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="16"
                android:id="@+id/txtBioNIKIbu"/>

            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="UBAH"
                android:id="@+id/btnUbahBiodata"
                android:background="@drawable/bg_rectangle_button"
                android:textColor="@color/colorWhite"
                android:layout_marginStart="240dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>